# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/employee_feedback_db
PGHOST=localhost
PGPORT=5432
PGUSER=username
PGPASSWORD=password
PGDATABASE=employee_feedback_db

# Flask Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Optional: Email Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Optional: OAuth Configuration (if using Flask-Dance)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB file upload limit
UPLOAD_FOLDER=attached_assets